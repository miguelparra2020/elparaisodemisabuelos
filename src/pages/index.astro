---
import Base from "@/layouts/Base.astro";
import Banner from "@/layouts/components/Banner.astro";
import KeyFeatures from "@/layouts/components/KeyFeatures.astro";
// import Testimonial from "@/layouts/components/Testimonial.astro";
import Service from "@/layouts/components/Service.astro";
// import about from "@/pages/about.astro";
import Cta from "@/layouts/partials/Cta.astro";
import { getEntryBySlug } from "astro:content";
import CounterComponent from "@/components/about/CounterComponent.astro";
import Gallery from "@/components/about/Gallery.astro";
import PageHeader from "@/components/PageHeader.astro";
import OurMembers from "@/components/about/OurMembers.astro";

const homepage = await getEntryBySlug("homepage", "index");
const { banner, key_features, service, testimonial } = homepage.data;
const about = await getEntryBySlug("about", "index");
const { counter, gallery, features, members } = about.data;
const page_data = {
  ...about.data,
  content: about.body,
};

---
<style>
  /* Estilos para el bot√≥n de WhatsApp */
  .btnWhasap {
    position: fixed;
    bottom: 20px;
    right: 20px;
    z-index: 9999;
    border: none; 
    border-radius: 50px;
    cursor: pointer;
  }
  .btnWhasap:hover {
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);    
  }
</style>

<Base>
  <!-- banner -->
  <Banner banner={banner} />
  <!-- key features -->
  <KeyFeatures key_features={key_features} />
  <!-- service -->
  <Service service={service} />
  <section class="page-hero py-16">
    <div class="container">
      <div class="page-hero-content mx-auto max-w-[768px] text-center">
        <PageHeader page_data={page_data} />
      </div>
      <CounterComponent counter={counter} />
      <!-- benifit -->
      <!-- gellary -->
      <Gallery gallery={gallery} />
      <!-- our works -->
      <!-- <Works features={features} /> -->
      <!-- our members -->
      <OurMembers members={members} />
    </div>
  </section>
  <Cta />
  
</Base>
<div>
  <a target="_blank" href="https://wa.me/34624439522?text=Hola%20cordial%20saludo,%20me%20comunico%20desde%20la%20p%C3%A1gina%20de%20elparaisodemisabuelos.com%20%0A%22Deseo%20hablar%20con%20alguien,%20para%20una%20asesor%C3%ADa%20personalizada%22" class="btnWhasap">
    <img src="/images/whatsapp.png" width="50" height="50" />
  </a>
</div>
